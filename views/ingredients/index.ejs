<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/tabs_style.css">
  <script defer src="/javascripts/tabs_script.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>Pasta-fy</title>
</head>
<body class="container">
  <nav class="navbar navbar-light bg-light fixed-top">
    <a class="navbar-brand" id="pastafyLogo" href="/"><img src="/assets/images/pastafyLogo3.png"><span class="navbar-brand">Pasta-fy</span></a>
    <a href="/ingredients">Explore</a>
    <% if (user) { %>
      <a href="/products">Products</a>
      <a href="/builds">Build</a>
      <a href="/logout">LOG OUT</a>
    <% } else { %>
      <a href="/auth/google" class="login">LOG IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"></a>
    <% } %>
  </nav>
<br>


<div id="main_content">

    <li class="selected" id="page1" onclick="change_tab(this.id);">Pasta</li>
    <li class="notselected" id="page2" onclick="change_tab(this.id);">Sauce</li>
    <li class="notselected" id="page3" onclick="change_tab(this.id);">Vegetables</li>
    <li class="notselected" id="page4" onclick="change_tab(this.id);">Proteins</li>
    
    <div class='hidden_desc' id="page1_desc">
        <h2>Page 1</h2>
        <% pastas.forEach(p=>{ %>
            <%= p.name %>
            <form action="/ingredients/<%= p._id %>/pastas" method="POST">
                <button class="btn btn-danger" type='submit'>Add to Build</button>
            </form>
            <br>
        <% }) %>
    </div>
   
    <div class='hidden_desc' id="page2_desc">
     <h2>Page 2</h2>
        <% sauces.forEach(s=>{ %>
            <%= s.name %>
            <form action="/ingredients/<%= s._id %>/sauces" method="POST">
                <button class="btn btn-danger" type='submit'>Add to Build</button>
            </form>
            <br>
        <% }) %>
    </div>
    
    <div class='hidden_desc' id="page3_desc">
     <h2>Page 3</h2>
        <% veges.forEach(v=>{ %>
            <%= v.name %>
            <form action="/ingredients/<%= v._id %>/veges" method="POST">
                <button class="btn btn-danger" type='submit'>Add to Basket</button>
            </form>
            <br>
        <% }) %>
    </div>

    <div class='hidden_desc' id="page4_desc">
     <h2>Page 4</h2>
        <% proteins.forEach(p=>{ %>
            <%= p.name %>
            <form action="/ingredients/<%= p._id %>/proteins" method="POST">
                <button class="btn btn-danger" type='submit'>Add to Build</button>
            </form>
            <br>
        <% }) %>
    </div>
    
    <div id="page_content">
     <h2>Page 1</h2>
        <% pastas.forEach(p=>{ %>
            <%= p.name %>
            <form action="/ingredients/<%= p._id %>" method="POST">
                <button class="btn btn-danger" type='submit'>Add to Build</button>
            </form>
            <br>
        <% }) %>
    </div>
    
</div>
<br> 

<%- include('../partials/footer') %>